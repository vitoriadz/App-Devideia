<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/initialscreenbackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoStart="true"
            android:flipInterval="1500">

            <LinearLayout
                android:id="@+id/mundo_das_ideias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="100">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mundoceus"
                        android:layout_weight="0.7"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mundoideias"
                        android:layout_weight="0.5"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mundoterra"
                        android:layout_weight="0.7"
                        android:layout_gravity="fill_horizontal"/>
                </LinearLayout>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl"
                    android:layout_weight="100">
                    <ImageView android:id="@+id/iv_ceu"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:src="@drawable/mundoceus"
                        android:layout_alignParentTop="true"
                        android:layout_alignLeft="@id/rl"/>

                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="350dp"
                        android:layout_centerInParent="true"
                        android:paddingBottom="50dp"
                        android:src="@drawable/mundoideias" />

                    <ImageView android:id="@+id/im_terra"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/mundoterra"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="100dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignBaseline="@id/im_terra"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width='wrap_content'
                            android:layout_height="wrap_content"
                            android:height="38dp"
                            android:fontFamily="@font/moredya_"
                            android:paddingLeft="23dp"
                            android:text="Mundo das Ideias"
                            android:textColor="@color/white"
                            android:textFontWeight="400"
                            android:textSize="32dp" />

                        <TextView
                            android:layout_width='match_parent'
                            android:layout_height='wrap_content'
                            android:fontFamily="@font/proximanovaregular"
                            android:lineHeight="24dp"
                            android:paddingLeft="23dp"
                            android:paddingRight="64dp"
                            android:text="Um mundo para organizar os seus pensamentos com facilidade, sem medo deles se perderem entre as chuvas de asteróides e explosões estelares."
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textFontWeight="400"
                            android:textSize="16dp" />

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl"
                android:layout_weight="100">
                <ImageView android:id="@+id/iv_ceu"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/mundoideias"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@id/rl"/>
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/mundoterra"
                    android:paddingBottom="50dp"
                    android:layout_centerInParent="true"/>

                <ImageView android:id="@+id/im_terra"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/mundoceus"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="100dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignBaseline="@id/im_terra"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width='wrap_content'
                        android:layout_height="wrap_content"
                        android:height="38dp"
                        android:fontFamily="@font/moredya_"
                        android:paddingLeft="23dp"
                        android:text="Mundo da Terra"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="32dp" />

                    <TextView
                        android:layout_width='match_parent'
                        android:layout_height='wrap_content'
                        android:fontFamily="@font/proximanovaregular"
                        android:lineHeight="24dp"
                        android:paddingLeft="23dp"
                        android:paddingRight="64dp"
                        android:text="O lar da concretude, onde os planos são mais do que apenas planos. É este o lugar onde você poderá ir além nas suas ideias."
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="16dp" />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl"
                android:layout_weight="100">
                <ImageView android:id="@+id/iv_ceu"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/mundoterra"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@id/rl"/>
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:src="@drawable/mundoceus"
                    android:padding="50dp"
                    android:layout_centerInParent="true"/>

                <ImageView android:id="@+id/im_terra"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/mundoideias"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="100dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignBaseline="@id/im_terra"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width='wrap_content'
                        android:layout_height="wrap_content"
                        android:height="38dp"
                        android:fontFamily="@font/moredya_"
                        android:paddingLeft="23dp"
                        android:text="Mundo dos Ceus"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="32dp" />

                    <TextView
                        android:layout_width='match_parent'
                        android:layout_height='wrap_content'
                        android:fontFamily="@font/proximanovaregular"
                        android:lineHeight="24dp"
                        android:paddingLeft="23dp"
                        android:paddingRight="64dp"
                        android:text="Um lugar mágico onde reúne todas suas jornadas percorridas."
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="16dp" />
                </LinearLayout>
            </RelativeLayout>
        </ViewFlipper>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/barralateral" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arraste para cima"
        android:textAlignment="center"
        android:fontFamily="@font/proximanovaregular"
        android:textColor="@color/white" />
</LinearLayout>
