<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:padding="16dp"
        app:ignore="MissingConstraints">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/backbutton"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEUS PROJETOS"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="32sp"
            android:fontFamily="@font/moredya"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projeto recente"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:fontFamily="@font/proximanovabold"
                    android:paddingBottom="16sp"
                    android:paddingTop="16sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:src="@drawable/projeto3"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:background="#8E9EAB" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="#8E9EAB"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meu Projeto 3"
                            android:textColor="#FFF"
                            android:textSize="20sp"
                            android:fontFamily="@font/proximanovabold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Projeto criado em 12 de maio de 2023"
                            android:textColor="#FFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/proximanovaregular"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovabold"
                        android:paddingTop="16sp"
                        android:paddingBottom="16sp"
                        android:text="Projetos anteriores"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver mais"
                        android:textColor="#fff"
                        android:paddingLeft="100dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/proximanovabold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            android:padding="16dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:src="@drawable/projeto2"
                                android:scaleType="centerCrop"
                                android:background="#8E9EAB" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:background="#8E9EAB"
                                android:orientation="vertical"
                                android:padding="3dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Meu Projeto 2"
                                    android:textColor="#FFF"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/proximanovabold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Projeto criado em 1 de marÃ§o 2023"
                                    android:textColor="#FFF"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/proximanovaregular"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="12dp"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:src="@drawable/projeto1"
                                android:scaleType="centerCrop"
                                android:background="#8E9EAB" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:background="#8E9EAB"
                                android:orientation="vertical"
                                android:padding="3dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Meu Projeto 1"
                                    android:textColor="#FFF"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/proximanovabold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Projeto criado em 9 de janeiro de 2023"
                                    android:textColor="#FFF"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/proximanovaregular"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>